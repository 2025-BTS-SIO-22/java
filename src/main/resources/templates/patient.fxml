            <Button fx:id="clearForm" layoutX="496.0" layoutY="23.0" mnemonicParsing="false" onAction="#clearForm" prefHeight="26.0" prefWidth="108.0" style="-fx-background-color: #1d3557;" text="Clear Table" textFill="#f1faee" />
