<AnchorPane prefHeight="400.0" prefWidth="678.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bts.lab_lune.controller.PatientController">
   <children>
      <Label layoutX="330.0" layoutY="54.0" prefHeight="28.0" prefWidth="194.0" text="Laboratoire Lune " textAlignment="JUSTIFY" textFill="#a177a1">
         <font>
            <Font name="Arial Black" size="19.0" />
         </font>
      </Label>
      <TableView fx:id="patientTable" layoutX="201.0" layoutY="82.0" onMouseClicked="#PatientForm" prefHeight="215.0" prefWidth="446.0">
